@model IEnumerable<MongoPlaces.Web.Models.PointOfInterestViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    table {
  border-collapse: collapse;
}
table td, table th {
  border: 1px solid black;
}

</style>

<div>
    <table >
        <thead>
        <tr>
            <th>
                @Html.Label("Name")
            </th>
            <th>
                @Html.Label("Latitude")
            </th>
            <th>
                @Html.Label("Longitude")
            </th>
            <th>
                @Html.Label("Description")
            </th>
            <th>
                @Html.Label("Type")
            </th>
            <th>
                @Html.Label("Favorites Count")
            </th>
        </tr>
        </thead>
        <tbody>
            @foreach (var point in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => point.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => point.Location.Latitude)
                    </td>
                    <td>
                        @Html.DisplayFor(m => point.Location.Longitude)
                    </td>
                    <td>
                        @Html.DisplayFor(m => point.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(m => point.SelectedType)
                    </td>
                    <td>
                        @Html.DisplayFor(m => point.FavoritesCount)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>